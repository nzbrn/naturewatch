<p><%= @message %></p>

<% unless @errors.nil? %>
  <% @errors.each do |field, errors| %>
  <ul>
    <% errors.each do |error, rows|  %>
    <li>
      <%= error %>
      <ul><li>Row(s): <%= rows.join(', ') %></li></ul>
    </li>
    <% end %>
    <% unless @field_options[field].blank? %>
    <li>Valid options are: <%= @field_options[field] %></li>
    <% end %>
  </ul>
  <% end %>
<% end %>
